<% include  ./partials/header  %>

<div class="container">
    <div class="newCamp">
        <h1 class="h1"> Create new Camp!</h1>

        <form action="/lookcamps" method="POST" class="form">
        <div class="form-group"> 
            <input type="text" name="name" placeholder="camp name" required>
        </div>
        <div class="form-group"> 
            <input type="number" name="price" placeholder="price" required min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <input type="text" name="image" placeholder="image-url" required>
        </div>
        <div class="form-group">
            <input type="text" name="description" placeholder="camp description" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary newBtn">Submit</button>
        </div>
</form>
    </div>

</div>
<% include  partials/footer  %>